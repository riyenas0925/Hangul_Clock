};

void setup() {
  Serial.begin(9600);
}

void loop() {
  for(int i = 0; i < 12; i++) {
    for(int j = 0; j < 60; j++) {
      drawClock(i, j);
      delay(1000);
    }
  }
}

void drawClock(int h, int m) {
  byte b[6] = { 0, };
  
  for(int i = 0; i < 6; i++) {
    b[i] = hour[h][i] | minuteTens[m / 10][i] | minuteOnes[m % 10][i];
    binaryPrint(b[i]);
  }

  Serial.println("------");
}

void binaryPrint(byte b) {
  for(int i = 5; i >= 0; i--) {
    Serial.print((b >> i) & 0X01);
  }
  Serial.println();
}
